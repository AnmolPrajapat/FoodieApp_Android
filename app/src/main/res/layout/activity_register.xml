<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:background="@drawable/buttoncustom">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="20dp"
        tools:ignore="MissingClass">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_gravity="center"
            android:background="@color/teal_200"
            android:hapticFeedbackEnabled="true"
            android:src="@drawable/profile3"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp" />


        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="upload image"
            android:textSize="16sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginStart="130dp"
            android:layout_marginLeft="130dp"
            android:layout_marginEnd="130dp"
            android:layout_marginRight="130dp"
            android:background="@color/black" />

        <EditText
            android:id="@+id/Rname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/btncustomise"
            android:ems="10"
            android:gravity="center"
            android:hint="Anurag prajapat"
            android:inputType="textPersonName"
            android:padding="16dp"
            android:textSize="19sp"
            android:textStyle="bold|italic" />

        <EditText
            android:id="@+id/Remail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/btncustomise"
            android:ems="10"
            android:gravity="center"
            android:hint="prajapatanmol2001@gmail.com"
            android:inputType="textEmailAddress"
            android:padding="16dp"
            android:textSize="19sp"
            android:textStyle="bold|italic" />

        <EditText
            android:id="@+id/Rpass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/btncustomise"
            android:ems="10"
            android:gravity="center"
            android:hint="********"
            android:inputType="textPassword"
            android:padding="16dp"
            android:textSize="19sp"
            android:textStyle="bold|italic" />

        <EditText
            android:id="@+id/Rphone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/btncustomise"
            android:ems="10"
            android:gravity="center"
            android:hint="+91 7718019904"
            android:inputType="phone"
            android:padding="16dp"
            android:textSize="19sp"
            android:textStyle="bold|italic" >
        </EditText>

        <Button
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/buttoncustom"
            android:gravity="center"
            android:text="Register"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:backgroundTint="#E6DDDD" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <View
                android:id="@+id/view3"
                android:layout_width="100dp"
                android:layout_height="4dp"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="50dp"
                android:background="@color/black" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="or with"
                android:textSize="18sp"
                android:textStyle="bold|italic" />

            <View
                android:id="@+id/view4"
                android:layout_width="100dp"
                android:layout_height="4dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginRight="50dp"
                android:background="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:orientation="horizontal"
            android:layout_marginBottom="30dp">

            <Button
                android:id="@+id/btnFB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/buttoncustom"
                android:drawableLeft="@drawable/facebook"
                android:gravity="center"
                android:text="Facebook"
                android:textColor="@color/black"
                app:backgroundTint="@color/fbcolor" />

            <Button
                android:id="@+id/btnGoogle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@drawable/buttoncustom"
                android:drawableLeft="@drawable/google"
                android:gravity="center"
                android:text="Google"
                android:textColor="@color/black"
                app:backgroundTint="@color/googlebg" />
        </LinearLayout>

        <TextView
            android:id="@+id/alreadyRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/btncustomise"
            android:gravity="center"
            android:text="Already register? Login"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:backgroundTint="@color/light_yellow" />

    </LinearLayout>
    </ScrollView>

</LinearLayout>